{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "main.c",
          "-o",
          "main.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "run",
        "type": "shell",
        "dependsOn": "build",
        "command": "./main.exe",
        "windows": {
          "command": ".\\main.exe"
        },
        "presentation": {
          "reveal": "always",
          "focus": true
        }
      }
    ]
  }
  